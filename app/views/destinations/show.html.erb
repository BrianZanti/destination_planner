<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row">
    <h4>Forecast for <%= @destination.name %>:</h4>
    <ul id='current-weather'>
      <li class='date'><%= @date %></li>
      <li class='current-temp'>Current Temp: <%= @weather[:main][:temp] %></li>
      <li class='high-temp'>High: <%= @weather[:main][:temp_max] %></li>
      <li class='low-temp'>Low: <%= @weather[:main][:temp_min] %></li>
      <li class='summary'>Summary: <%= @weather[:weather].first[:description] %></li>
    </ul>
  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
